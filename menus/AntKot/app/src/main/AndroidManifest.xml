<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antkot">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BottomTabActivity" />
        <activity
            android:name=".LeftMenuActivity"
            android:label="@string/title_activity_left_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TopTabActivity" />
        <activity android:name=".PullMenuActivity" />
        <activity android:name=".mvp.view.RxKotlinActivity"></activity>
    </application>

</manifest>